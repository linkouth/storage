{% extends 'base.html.twig' %}

{% block body %}
    <h1>Список прорабов</h1>

    <table class="table table-bordered">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Имя</th>
            <th scope="col">Фамилия</th>
            <th scope="col">Email</th>
            <th scope="col">Пароль</th>
            <th scope="col">Роль</th>
            <th scope="col">Соль</th>
            <th scope="col">Грузчики</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody align="center">
            {% for foreman in foremen %}
                <tr>
                    <th scope="row"><a href="{{ path('foreman_show', { 'id': foreman.id }) }}">{{ foreman.id }}</a></th>
                    <td>{{ foreman.name }}</td>
                    <td>{{ foreman.surname }}</td>
                    <td>{{ foreman.email }}</td>
                    <td>{{ foreman.password }}</td>
                    <td>{{ foreman.role }}</td>
                    <td>{{ foreman.salt }}</td>
                    <td>{{ foreman.loaders }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('foreman_show', { 'id': foreman.id }) }}">Показать</a>
                            </li>
                            <li>
                                <a href="{{ path('foreman_edit', { 'id': foreman.id }) }}">Обновить</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('foreman_new') }}">Создать нового прораба</a>
{% endblock %}
