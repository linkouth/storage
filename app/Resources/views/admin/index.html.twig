{% extends 'base.html.twig' %}

{% block body %}
    <h1>Список администраторов</h1>

    <table class="table table-bordered">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Имя</th>
            <th scope="col">Фамилия</th>
            <th scope="col">Email</th>
            <th scope="col">Пароль</th>
            <th scope="col">Роль</th>
            <th scope="col">Соль</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody align="center">
            {% for admin in admins %}
                <tr>
                    <th scope="row"><a href="{{ path('admin_show', { 'id': admin.id }) }}">{{ admin.id }}</a></th>
                    <td>{{ admin.name }}</td>
                    <td>{{ admin.surname }}</td>
                    <td>{{ admin.email }}</td>
                    <td>{{ admin.password }}</td>
                    <td>{{ admin.role }}</td>
                    <td>{{ admin.salt }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('admin_show', { 'id': admin.id }) }}">Показать</a>
                            </li>
                            <li>
                                <a href="{{ path('admin_edit', { 'id': admin.id }) }}">Обновить</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_new') }}">Создать нового администратора</a>
{% endblock %}
