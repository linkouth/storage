{% extends 'base.html.twig' %}

{% block body %}
    <h1>Список администраторов</h1>

    <table bordercolor="blue" border="1">
        <thead align="center">
        <tr>
            <th>Id</th>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Email</th>
            <th>Пароль</th>
            <th>Роль</th>
            <th>Соль</th>
        </tr>
        </thead>
        <tbody align="center">
            {% for admin in admins %}
                <tr>
                    <td><a href="{{ path('admin_show', { 'id': admin.id }) }}">{{ admin.id }}</a></td>
                    <td>{{ admin.name }}</td>
                    <td>{{ admin.surname }}</td>
                    <td>{{ admin.email }}</td>
                    <td>{{ admin.password }}</td>
                    <td>{{ admin.role }}</td>
                    <td>{{ admin.salt }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('admin_show', { 'id': admin.id }) }}">Показать</a>
                            </li>
                            <li>
                                <a href="{{ path('admin_edit', { 'id': admin.id }) }}">Обновить</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_new') }}">Создать нового администратора</a>
        </li>
    </ul>
{% endblock %}
